export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

if [ ! -d ~/.pyenv ]; then
    echo Installing pyenv
    git clone https://github.com/pyenv/pyenv.git ~/.pyenv
    pyenv install 3.7.3
    pyenv global 3.7.3
elif command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
fi
